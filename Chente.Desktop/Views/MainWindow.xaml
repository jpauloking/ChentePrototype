<Window x:Class="Chente.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="CanResizeWithGrip"
        Title="Chente" 
        Height="550" 
        Width="900" 
        FontFamily="Segoe UI"
        Style="{StaticResource MaterialDesignWindow}">
    <Grid>
        <!--Row Defintions-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- ./Row Defintions-->
        <!--Navigation Bar-->
        <materialDesign:Card Margin="16" Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Menu Grid.Column="0">
                    <Menu.Items>
                        <MenuItem Header="Dashboard" Icon="{materialDesign:PackIcon Kind=ViewDashboardOutline}" Command="{Binding NavigateToDashboardCommand}" Style="{StaticResource MaterialDesignMenuItem}" MinWidth="150"/>
                        <MenuItem Header="Installments" Icon="{materialDesign:PackIcon Kind=Payment}" Command="{Binding NavigateToInstallmentsCommand}" Style="{StaticResource MaterialDesignMenuItem}" MinWidth="150"/>
                        <MenuItem Header="Loans" Icon="{materialDesign:PackIcon Kind=BankOutline}" Command="{Binding NavigateToLoansCommand}" Style="{StaticResource MaterialDesignMenuItem}" MinWidth="150"/>
                        <MenuItem Header="Borrowers" Icon="{materialDesign:PackIcon Kind=AccountGroupOutline}" Command="{Binding NavigateToBorrowersCommand}" Style="{StaticResource MaterialDesignMenuItem}" MinWidth="150"/>
                    </Menu.Items>
                </Menu>
                <Menu Grid.Column="1">
                    <Menu.Items>
                        <MenuItem Header="Account" Icon="{materialDesign:PackIcon Kind=AccountOutline}" MinWidth="150"/>
                        <MenuItem Header="Logout" Icon="{materialDesign:PackIcon Kind=Logout}" MinWidth="150"/>
                    </Menu.Items>
                </Menu>
            </Grid>
        </materialDesign:Card>
        <!-- ./Navigation Bar-->
        <!--Content-->
        <materialDesign:Card Grid.Row="1" Padding="16" Margin="16,0,16,16">
            <ContentControl Content="{Binding NavigationService.CurrentViewModel}"/>
        </materialDesign:Card>
        <!-- ./Content-->
    </Grid>
</Window>
