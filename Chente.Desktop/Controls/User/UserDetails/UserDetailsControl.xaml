                                <TextBlock Text="Add loan" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </materialDesign:ColorZone>-->
                <!-- ./Buttons-->
            </StackPanel>
        </ScrollViewer>
    </materialDesign:Card>
    <!-- ./User Information-->
</UserControl>
